{
  "Serilog": {
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "LiterateConsole",
        "Args": { "outputTemplate": "{Level:u4}: {SourceContext}[{ThreadId}]{NewLine}      {Message}{NewLine}{Exception}" }
      },
      {
        "Name": "File",
        "Args": {
          "path": "migration.log",
          "outputTemplate": "[{Timestamp:dd.MM.yy HH:mm:ss:fff}] [{Level:u3}] {SourceContext}[{ThreadId}]: {Message}{NewLine}{Exception}"
        }
      }
    ]
  }
}
